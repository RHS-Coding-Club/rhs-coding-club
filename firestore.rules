rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin or officer
    function isAdminOrOfficer() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'officer'];
    }

    // Users Collection
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == userId || isAdminOrOfficer();
      allow delete: if false; // Prevent accidental deletion
    }

    // Events Collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdminOrOfficer();
    }

    // RSVPs Collection
    match /rsvps/{rsvpId} {
      allow read: if request.auth.uid == resource.data.userId || isAdminOrOfficer();
      allow create, update: if request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId || isAdminOrOfficer();
    }

    // Projects Collection
    match /projects/{projectId} {
      allow read: if resource.data.approved == true || request.auth.uid == resource.data.authorId || isAdminOrOfficer();
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.authorId || isAdminOrOfficer();
      allow delete: if request.auth.uid == resource.data.authorId || isAdminOrOfficer();
    }

    // Challenges Collection
    match /challenges/{challengeId} {
      allow read: if resource.data.published == true || isAdminOrOfficer();
      allow create, update, delete: if isAdminOrOfficer();
    }

    // Submissions Collection
    match /submissions/{submissionId} {
      allow read: if request.auth.uid == resource.data.userId || isAdminOrOfficer();
      allow create: if request.auth.uid == request.resource.data.userId;
  // Allow the owner or an admin/officer to update (e.g., mark pass/fail, add feedback)
  allow update: if request.auth.uid == resource.data.userId || isAdminOrOfficer();
      allow delete: if false;
    }

    // Posts Collection
    match /posts/{postId} {
  // Publicly readable blog posts (listing and detail pages must be accessible to everyone)
  allow read: if true;
      allow create, update, delete: if isAdminOrOfficer();
    }

    // Resources Collection
    match /resources/{resourceId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null;
      allow update, delete: if isAdminOrOfficer();
    }

    // Attendance Collection
    match /attendance/{attendanceId} {
      allow read, create, update, delete: if isAdminOrOfficer();
    }

    // Officers Collection
    match /officers/{officerId} {
      allow read: if true; // Public read access for About page
      allow create, update, delete: if isAdminOrOfficer();
    }

    // Contacts Collection
    match /contacts/{contactId} {
      allow read, update, delete: if isAdminOrOfficer();
      allow create: if true; // Anyone can send a message
    }

    // Pending Members Collection
    match /pendingMembers/{memberId} {
      allow read, update, delete: if isAdminOrOfficer();
      allow create: if true; // Anyone can apply to join
    }

    // Newsletter Subscribers Collection
    match /newsletterSubscribers/{subscriberId} {
      allow read: if true; // Allow server-side reading for newsletter sending
      allow create: if true; // Allow unauthenticated newsletter subscriptions
      allow delete: if true; // Allow anyone to unsubscribe and server-side operations
      allow update: if isAdminOrOfficer(); // Only admins can update subscriber data
    }
  }
}